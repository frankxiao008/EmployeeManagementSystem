<div class="row">
    <div class="col-md-12">

        <h2>Log In</h2>
        <hr />

        {{#if errorMessage}}<div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>{{/if}}
       
        {{#if successMessage }}

            <h2>Register</h2>
             <hr />
            <div class="alert alert-success"> <strong>Success:</strong> User created</div>
            <a class="btn btn-success pull-right" href="/login">&nbsp;&nbsp;&nbsp;Proceed to Log in&nbsp;&nbsp;&nbsp;</a><br /><br /><br />

 
        {{else}}
        <form method="post" action="/login">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input class="form-control" id="userName" name="userName" type="text" placeholder="Enter your User Name" required value="{{userName}}"
                        />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input class="form-control" id="password" name="password" type="password" placeholder="Enter your Password" required />
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-success pull-right" value="Login" />
        </form>
        {{/if}}
    </div>
</div>